<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:id="@+id/tv_MyHistoryFragmentAdapter_title"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_toRightOf="@id/tv_MyHistoryFragmentAdapter_title"
            android:scaleType="centerCrop"
            android:id="@+id/iv_MyHistoryFragmentAdapter_Cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/bt_MyHistoryFragmentAdapter_share"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="@string/share"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>