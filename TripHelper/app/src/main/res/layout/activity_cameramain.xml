<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/t_FunctionCamera_toolbar"
        app:titleTextColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fl_FunctionCamera_captureLayout"
        android:layout_width="match_parent"
        android:layout_height="475dp">
        <ImageView
            android:id="@+id/iv_FunctionCamera_catpureImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="#eee"
            />
        <EditText
            android:id="@+id/et_FunctionCamera_captureEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_FunctionCamera_captureText"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_FunctionCamera_fontbm"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=""
                android:text="배민"/>
            <Button
                android:id="@+id/bt_FunctionCamera_fontddalgi"
                android:background="@android:color/transparent"
                android:text="딸기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_FunctionCamera_fontmonsori"
                android:background="@android:color/transparent"
                android:text="몬소리"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_FunctionCamera_fonttvnbold"
                android:background="@android:color/transparent"
                android:text="무거움"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_FunctionCamera_fonttvnlight"
                android:background="@android:color/transparent"
                android:text="가벼움"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>