<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_function_plan1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context="com.jm.gon.triphelper.FunctionPlan1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fontColor"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <Button
                android:id="@+id/btn_FunctionPlan1_DateStart"
                android:text="start"
                android:background="@color/fontColor"
                android:textColor="@color/bgColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Widget.AppCompat.Button"/>

            <TextView
                android:id="@+id/tv_FunctionPlan1_DateStart"
                android:text="startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_FunctionPlan1_DateEnd"
                android:background="@color/fontColor"
                android:textColor="@color/bgColor"
                android:text="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_FunctionPlan1_DateEnd"
                android:text="enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_FunctionPlan1_theme"
                android:text="theme"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/sp_FunctionPlan1_theme"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:entries="@array/theme"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_FunctionPlan1_city"
                android:text="city"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/sp_FunctionPlan1_city"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:entries="@array/city"/>
        </LinearLayout>


        <TextView
            android:text="essential spot"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/actv_FunctionPlan1_spot"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:dropDownHeight="175dp"
                android:completionThreshold="1" />
            <Button
                android:id="@+id/btn_FunctionPlan1_add"
                android:text="add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/list_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
